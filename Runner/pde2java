#!/bin/bash

# Loop through all .pde files in the current directory
for file in *.pde; do
  # Check if the filename actually contains ".pde" (to avoid renaming non-.pde files)
  if [[ $file == *.pde ]]; then
    # Use the `mv` command to rename each .pde file to .java
    mv "$file" "${file%.pde}.java"
    echo "Converted: $file to ${file%.pde}.java"
  else
    echo "No .pde files found to convert."
  fi
done

